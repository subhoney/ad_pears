{
    "manifest_version": 2,
    
    "name": "AdPears",
    "description": "An extension to remove all content from a webpage and only show adverstising.",
    
    "browser_action": {
        "default_icon": "bin/pearIcon.ico",
        "default_popup": "html/popup.html"
    },
    
    "version": "1.0",

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}